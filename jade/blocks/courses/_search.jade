.e-widget.e-form--search_course
	.e-caption.e-caption--with_icon.is-center.e-padding_bottom--08
		h3.e-caption--with_icon__title.e-caption--with_icon__title--relative.clearfix
			i.e-caption--with_icon__icon.ti-pencil-alt
			span.e-caption--with_icon__text Find Your Course
			
		p.e-caption--with_icon__subtitle Make Your Success a Priority

	form.e-form__form(action="" method="post")
		.row.e-form__row
			.col-md-3.e-form__col
				select.e-field.e-field--select.is-shadow.is-huge.is-full_width( name="course-category" autocomplete="off" )
					option(value="" selected="selected") Select Category
					option(value="foo") Foo
					option(value="baz") Baz				
			.col-md-3.e-form__col
				select.e-field.e-field--select.is-shadow.is-huge.is-full_width(name="course-status" autocomplete="off" )
					option(value="" selected="selected") Select Status
					option(value="lorem") Lorem
					option(value="ipsum") Ipsum
			.col-md-3.e-form__col
				input.e-field.e-field--text.is-shadow.is-huge.is-full_width(type="text" name="s" placeholder="Type keyword")

			.col-md-3.e-form__col
				input.e-field.e-field--submit.e-button.e-button--fill.is-full_width.is-primary.is-huge.is-shadow(type="submit" value="Search cource")
