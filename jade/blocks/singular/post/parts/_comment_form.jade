.e-widget.e-comment_form--secondary(class=$posts_comment_form_class)
	.e-caption.e-caption--default.e-margin_bottom--08
		h5.is-md.e-caption--default__title.clearfix	Leave a comment

	form.e-form(action="" method="post")

		.e-field_group.row
			.col-lg-6.e-margin_bottom--07
				label.e-field--label Your Name (*)
				input.e-field.e-field--text.is-solid.is-huge.is-fullwidth(type="text" name="name")
			.col-lg-6.e-margin_bottom--07
				label.e-field--label Your Email (*)
				input.e-field.e-field--text.is-solid.is-huge.is-fullwidth(type="text" name="email")

		.e-field_group.e-margin_bottom--07
			label.e-field--label Your Comment (*)
			textarea.e-field.e-field--textarea.is-solid.is-huge.is-fullwidth(type="text" name="comment")

		.e-field_group
			input.e-field.e-field--submit.e-button.e-button--fill.is-primary.is-huge(type="submit" value="Send")