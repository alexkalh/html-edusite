include jade/_config.jade
include jade/mixins/_alex.jade

doctype
html( lang="en-US" prefix="og: http://ogp.me/ns#" )

	include jade/_head.jade

	body.e-body.e-body--relative.e-body--home

		header.e-header.e-header--fixed
			.container
				.e-header_top.row
					.col-lg-6
						nav.e-top_menu.e-top_menu--left
							ul.e-top_menu__links
								li.e-top_menu__link.e-top_menu__link--lvl_0
									a.e-top_menu__url(href='mailto:support@colourstheme.com') support@colourstheme.com
					.col-lg-6
						nav.e-top_menu.e-top_menu--right
							ul.e-top_menu__links
								li.e-top_menu__link.e-top_menu__link--lvl_0
									a.e-top_menu__url(href="#login") Login
								li.e-top_menu__link.e-top_menu__link--lvl_0
									a.e-top_menu__url(href="#register") Register
				
				.e-header_bottom.e-header_bottom--fixed.clearfix
					h1.e-logo.e-logo--left
						a.e-logo__link(href=$e_home_url title='')
							img.e-logo__img(src=$e_logo alt='')

					nav.e-main_menu.e-main_menu--right
						include jade/blocks/nav/_primary.jade
		
		.e-main_content
			include jade/blocks/slider/_nivo.jade
			
			section.e-section.e-bg_color--07
				.container
					.row.e-height--match
						.col-lg-8
							.e-col.clearfix
								include jade/blocks/courses/_carousel.jade
						.col-lg-4
							.e-col.e-bg_color--10
								include jade/blocks/misc/_count-down.jade
								include jade/blocks/form/_register.jade
			
			section.e-section.has-overlay.e-demo__row--02.e-padding_bottom--09
				.container
					.row
						.col-lg-5.col-md-offset-1
							.e-col.clearfix
								include jade/blocks/misc/_banner.jade

						.col-lg-5
							.e-col.clearfix
								include jade/blocks/misc/_welcome.jade		

			section.e-section.e-demo__row--03.e-bg_color--07
				.container
					.e-section__box.e-margin_top--09__negative
						include jade/blocks/courses/_search.jade

						section.e-section.e-section--child							
							.row
								.col-lg-4
									.e-col.clearfix
										- var $intro_icon = 'icon-basic-lightbulb'
										- var $intro_desc = 'Over 400 Students Enrolled Learn Skills'
										include jade/blocks/elements/_intro-1st.jade

								.col-lg-4
									.e-col.clearfix
										- var $intro_icon = 'icon-basic-book'
										- var $intro_desc = 'More than 3020 Online Courses Available'
										include jade/blocks/elements/_intro-1st.jade

								.col-lg-4
									.e-col.clearfix
										- var $intro_icon = 'fa fa-users'
										- var $intro_desc = 'More than 320 Instructors Available'
										include jade/blocks/elements/_intro-1st.jade

			section.e-section.e-demo__row--04.e-bg_color--07
				.container
					.row
						.col-lg-12
							.e-col.clearfix.e-margin_bottom--08
								include jade/blocks/courses/_grid.jade

			section.e-section.e-demo__row--05
				.container.e-padding_top--12.e-padding_bottom--12
					.row
						.col-lg-4
							.e-col.clearfix.e-margin_top--05
								include jade/blocks/elements/_intro-2nd.jade

						.col-lg-4
							.e-col.clearfix.e-margin_top--05
								include jade/blocks/elements/_intro-2nd.jade

						.col-lg-4
							.e-col.clearfix.e-margin_top--05
								include jade/blocks/elements/_intro-2nd.jade								

		footer.container
			include jade/_footer.jade