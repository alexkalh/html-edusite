include jade/_config.jade
include jade/mixins/_alex.jade

doctype
html( lang="en-US" prefix="og: http://ogp.me/ns#" )

	include jade/_head.jade

	body.e-body.e-body--relative.e-body--first

		header.e-header.e-header--fixed
			.container
				.e-header_top.row
					.col-lg-6
						nav.e-top_menu.e-top_menu--left
							ul.e-top_menu__links
								li.e-top_menu__link.e-top_menu__link--lvl_0
									a.e-top_menu__url(href='mailto:support@colourstheme.com') support@colourstheme.com
					.col-lg-6
						nav.e-top_menu.e-top_menu--right
							ul.e-top_menu__links
								li.e-top_menu__link.e-top_menu__link--lvl_0
									a.e-top_menu__url(href="#login") Login
								li.e-top_menu__link.e-top_menu__link--lvl_0
									a.e-top_menu__url(href="#register") Register
				
				.e-header_bottom.e-header_bottom--fixed.clearfix
					h1.e-logo.e-logo--left
						a(href=$e_home_url title='')
							img(src=$e_logo alt='')

					nav.e-main_menu.e-main_menu--right
						include jade/blocks/nav/_primary.jade
		
		.e-main_content
			include jade/blocks/slider/_nivo.jade
			
			section.e-section.e-bg_color--07
				.container
					.row.e-height--match
						.col-lg-8
							.e-col
								include jade/blocks/courses/_carousel.jade
						.col-lg-4
							.e-col.e-bg_color--10
								include jade/blocks/misc/_count-down.jade
								include jade/blocks/form/_register.jade
									


		footer.container
			include jade/_footer.jade