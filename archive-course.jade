			section.e-section.e-demo__row--01.e-padding_top--12.e-padding_bottom--12
				.e-container.container
					.row
						.col-lg-12
							.e-col.clearfix

								.e-courses_list.e-courses_list--grid
									
									.e-courses__toolbar.e-margin_bottom--10
										form.e-form( action="" method="post" )
											.row
												.col-md-5
													select.e-field.e-field--select.is-solid.is-huge.is-full_width.is-nospace(name="course-category" autocomplete="off" )
