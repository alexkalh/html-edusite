														option(value="foo") Foo
														option(value="baz") Baz

												.col-md-5
													input.e-field.e-field--text.is-solid.is-huge.is-full_width(type="text" name="s" placeholder="Enter search keyword")

												.col-md-2
													input.e-field.e-field--submit.e-button.e-button--fill.is-full_width.is-primary.is-huge(type="submit" value="Search")

									.e-courses__outer

										.e-courses__inner.clearfix

