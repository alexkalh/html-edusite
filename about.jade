include jade/_config.jade
include jade/mixins/_alex.jade

doctype
html( lang="en-US" prefix="og: http://ogp.me/ns#" )

	include jade/_head.jade

	body.e-body.e-body--relative.e-body--sub.e-body--about

		include jade/blocks/header/_deault.jade
		
		.e-main_content
			
			section.e-section.e-demo__row--0.e-section--dark.e-padding_top--15.has-overlay
				.e-container.container
					.row
						.col-lg-12
							.e-col.clearfix.e-margin_top--13.e-margin_bottom--13
								- var $breadcrumb_caption = 'Who we are'
								- var $breadcrumb_current = 'About'
								include jade/blocks/breadcrumbs/_centered.jade

			section.e-section.e-demo__row--01.e-padding_top--12.e-padding_bottom--08
				.e-container.container
					.row
						.col-lg-12
							.e-col.clearfix
								- var $caption_icon = 'fa fa-pagelines'
								- var $caption_text = 'Welcome to Edusite'
								- var $caption_desc = 'Quisque cursus in augue eget faucibus suspendisse vel mattis libero aliquam'
								include jade/blocks/caption/_centered.jade

			section.e-section.e-demo__row--02
				.e-container.container
					.row
						.col-lg-6.col-lg-push-6
							.e-col.clearfix
								- var $caption_text = "We're in the business of hosting great ideas."
								include jade/blocks/caption/_default_lowercase.jade

			section.e-section.e-demo__row--03.e-padding_top--07.e-padding_bottom--12
				.e-container.container
					.row
						.col-lg-6
							.e-col.clearfix.e-margin_top--15__negative
								- var $img_src = "demo/image/writing.jpg"
								- var $classes = 'e-widget'
								include jade/blocks/elements/_image.jade
								
						.col-lg-6
							.e-col.clearfix
								include jade/blocks/about/_signature.jade
		
			section.e-section.e-demo__row--04
				.e-container.container
					.row
						.col-lg-12
							include jade/blocks/testimonials/_carousel-single.jade

			section.e-section.e-demo__row--05
				.e-container--full
					.row.e-row--no_space
						.col-lg-3
							.e-col.clearfix
								- var $card_thumb = 'demo/card/single/0.jpg'
								- var $card_full  = 'demo/card/single/0-full.jpg'
								include jade/blocks/card/_default.jade
						.col-lg-3
							.e-col.clearfix
								- var $card_thumb = 'demo/card/single/1.jpg'
								- var $card_full  = 'demo/card/single/1-full.jpg'
								include jade/blocks/card/_default.jade
						.col-lg-3
							.e-col.clearfix
								- var $card_thumb = 'demo/card/single/2.jpg'
								- var $card_full  = 'demo/card/single/2-full.jpg'
								include jade/blocks/card/_default.jade
						.col-lg-3
							.e-col.clearfix
								- var $card_thumb = 'demo/card/single/3.jpg'
								- var $card_full  = 'demo/card/single/3-full.jpg'
								include jade/blocks/card/_default.jade

			section.e-section.e-demo__row--06.e-padding_top--12.e-padding_bottom--12
				.e-container.container
					.row
						.col-lg-6
							.e-col.clearfix
								- var $card_thumb    = 'demo/card/static/find-a-quote.jpg'
								- var $card_title    = 'Find A Course and Sign Up Today!'
								- var $card_desc     = 'Pellentesque quiselitnec justo blandit molestieullam etellus ultricies grvidanisi is etposue justo blandit molestieullam etellus ultricies grvidanisi is etposuer.'
								- var $card_btn_text = 'View online courses'
								- var $card_btn_link = '#'
								include jade/blocks/card/_secondary.jade

						.col-lg-6
							.e-col.clearfix
								include jade/blocks/misc/_skills.jade

			section.e-section.e-demo__row--07.e-padding_top--12
				.e-container.container
					.row
						.col-lg-12
							.e-col.clearfix
								- var $caption_icon = 'fa fa-users'
								- var $caption_text = 'Our Great Faculties'
								- var $caption_desc = 'Quisque cursus in augue eget faucibus suspendisse vel mattis libero aliquam'
								include jade/blocks/caption/_centered.jade

			section.e-section.e-demo__row--08.e-padding_bottom--12
				.e-container.container
					.row
						.col-lg-3
							.e-col.clearfix
								- var $staff_avatar = 'demo/staff/single/1.jpg'
								- var $staff_name = $quote_authors[0][0]
								- var $staff_job = $quote_authors[0][2]
								include jade/blocks/staff/_single.jade

						.col-lg-3
							.e-col.clearfix
								- var $staff_avatar = 'demo/staff/single/2.jpg'
								- var $staff_name = $quote_authors[1][0]
								- var $staff_job = $quote_authors[1][2]
								include jade/blocks/staff/_single.jade

						.col-lg-3
							.e-col.clearfix
								- var $staff_avatar = 'demo/staff/single/3.jpg'
								- var $staff_name = $quote_authors[2][0]
								- var $staff_job = $quote_authors[2][2]
								include jade/blocks/staff/_single.jade

						.col-lg-3
							.e-col.clearfix								
								- var $staff_avatar = 'demo/staff/single/4.jpg'
								- var $staff_name = $quote_authors[3][0]
								- var $staff_job = $quote_authors[3][2]
								include jade/blocks/staff/_single.jade

		include jade/_footer.jade